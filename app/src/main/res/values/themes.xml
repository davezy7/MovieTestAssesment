<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieTestAssesment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Text Styles -->
    <style name="TitleText" parent="TextSpacing">
        <item name="android:fontFamily">@font/robotocondensed_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DescText" parent="TextSpacing">
        <item name="android:fontFamily">@font/robotocondensed_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="RegularText" parent="TextSpacing">
        <item name="android:fontFamily">@font/robotocondensed_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- SPACING AND ALIGNMENT -->
    <style name="TextSpacing" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>
</resources>